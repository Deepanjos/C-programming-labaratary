#include<stdio.h>
int main()
{  
    float length,breath,area,perimeter; 
    
    printf("Enter the length of a rectangle :");
    scanf("%f",&length);
    printf("\nEnter the breath of a rectangle :");
    scanf("%f",&breath);
    
    perimeter=2*length+2*breath;
    area= length*breath;
    
     printf("\nThe area of a rectangle is %.2f",area);
     printf("\nThe perimeter of a rectangle is %.2f",perimeter);
     
     return 0;
}
